!!!
%html{:lang => 'en'}
  %head
    %title madmin
    = stylesheet_link_tag    "application", :media => "all"
    = csrf_meta_tags
  %body
    .navbar
      .navbar-inner
        .container
          .brand madmin
          = render 'navbar'
    .container
      .row
        = render 'breadcrumb'
        .span10
          - if flash[:notice].present?
            .alert.alert-info= flash[:notice]
          - if flash[:alert].present?
            .alert.alert-error
              - flash[:alert].each do |msg|
                Error: #{msg}
          = yield
