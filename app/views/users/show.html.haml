.page-header
  %h1= @user.email

.well
  %ul
    %li #{User.human_attribute_name(:created_at)}: #{l @user.created_at}.
    %li #{User.human_attribute_name(:updated_at)}: #{l @user.updated_at}.
    %li
      #{User.human_attribute_name(:role)}:
      - if @user.postmaster?
        = @user.superadmin? ? 'Superadmin' : 'Admin'
      - else
        = (@user.role.presence || User::ROLES.first).humanize
    - if @user.forward_destination.present?
      %li.text-info Email is <strong>not</strong> stored but forwarded to #{@user.forward_destination}.

  - if @user.destroyable?
    .pull-right= link_to t('.destroy', :default => t("helpers.links.destroy")), confirm_destroy_domain_user_path(@domain, @user), :class => 'btn btn-danger'
  = link_to 'Edit', edit_domain_user_path(@domain, @user), :class => 'btn'

