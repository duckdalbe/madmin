.page-header
  %h1= @user.email

.well
  %h4 Meta
  .pull-right
    = link_to 'Edit', edit_domain_user_path(@domain, @user), :class => 'btn'
    - if @user.destroyable?
      = link_to t('destroy'), confirm_destroy_domain_user_path(@domain, @user), :class => 'btn btn-danger'
  %ul
    %li #{User.human_attribute_name(:created_at)}: #{l @user.created_at}.
    %li #{User.human_attribute_name(:updated_at)}: #{l @user.updated_at}.
    %li
      #{t(:role)}:
      - if @user.postmaster?
        = @user.superadmin? ? 'Superadmin' : 'Admin'
      - else
        = (@user.role.presence || User::ROLES.first).humanize
    - if @user.forward_destination.present?
      %li.text-info Email is <strong>not</strong> stored but forwarded to #{@user.forward_destination}.

  .clearfix

- if can? :manage, DyndnsHostname
  .well#dyndns_hostnames
    %h4 Dyndns Hostnames
    .pull-right= link_to t('new'), new_domain_user_dyndns_hostname_path(@domain, @user), :class => 'btn btn-primary'

    %ul
      - @user.dyndns_hostnames.each do |hostname|
        %li
          = hostname.name
          = link_to t('.edit'), edit_domain_user_dyndns_hostname_path(@domain, @user, hostname), :class => 'btn btn-small'
          = link_to t('.destroy'), confirm_destroy_domain_user_dyndns_hostname_path(@domain, @user, hostname), :class => 'btn btn-small btn-danger'
    .clearfix


